<!--pages/searchResult/searchResult.wxml-->


<!-- template version -->
<template name = "songList">
  <view class = "songList">
    <view class = "songImgBlock">
      <image class = "songImg" src = '{{songURL}}' />
    </view>
    <view class = "songInfo">
      <view class = 'songName'>
        {{songName}}
      </view>
      <view class = 'singer'>
        {{singer}}
      </view>
    </view>
  </view>
</template>


<view id='searchResult'>Search Result for {{searchKey}}:</view>
 <template is = "songList" data = "{{songURL:'../../asserts/pictures/musicBlue.png', songName: 'Song Name', singer: 'singer'}}"></template>


<!-- navigator version  -->
<scroll-view class='pageBody' scroll-y = 'true'>
